@model IEnumerable<string>

<div class="d-grid gap-2">
    <a class="btn btn-outline-secondary"
       asp-action="Index"
       asp-controller="Home"
       asp-route-genre="">Home</a>

    @foreach (string genre in Model ?? Enumerable.Empty<string>())
    {
        <a class="btn @(genre == ViewBag.SelectedGenre ? "btn-primary" : "btn-outline-secondary")"
           asp-action="Index"
           asp-controller="Home"
           asp-route-genre="@genre"
           asp-route-productPage="1">
            @genre
        </a>
    }
</div>
