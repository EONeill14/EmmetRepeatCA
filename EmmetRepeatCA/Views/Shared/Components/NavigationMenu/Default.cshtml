@model IEnumerable<string>

@if (Model.Any())
{
    <ul class="list-group">
        @foreach (var genre in Model)
        {
            <li class="list-group-item">
                <a asp-controller="Home" asp-action="Index" asp-route-genre="@genre">
                    @genre
                </a>
            </li>
        }
    </ul>
}
else
{
    <p>No genres available.</p>
}
